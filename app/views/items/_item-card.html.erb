<div class="card m-2" style="width: 18rem;">
        <div class="embed-responsive embed-responsive-16by9">
          <%if item.picture.attached?%>
           <%=image_tag item.picture ,class: "card-img-top embed-responsive-item", alt: "Card image cap"%>
          <%end%>
        </div>  
        <div class="card-body">
          
          <h5 class="card-title"><%=item.name%></h5>
         
          <div class="price">
            <span style="color: chocolate;" >$ <%=item.price%></span>
            <span>per day</span>
        </div>
          <p class="card-text hide-overflow"><%=item.description%></p>
            <p class="card-text"><small class="text-muted"><%=item.pickup_address.suburb%>,<%=item.pickup_address.state%></small></p>         
        </div>
    </div>